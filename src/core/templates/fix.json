{
  "name": "Bug Fix",
  "description": "Fix a bug",
  "fields": [
    {
      "name": "type",
      "label": "Type",
      "type": "text",
      "required": true,
      "default": "fix"
    },
    {
      "name": "scope",
      "label": "Scope",
      "type": "text",
      "required": false,
      "hint": "Component affected (ui, core, etc.)"
    },
    {
      "name": "description",
      "label": "Description",
      "type": "text",
      "required": true,
      "hint": "Brief description of the bug fix"
    },
    {
      "name": "body",
      "label": "Body",
      "type": "multiline",
      "required": false,
      "hint": "Detailed description of the issue and how it was fixed"
    }
  ],
  "format": "{type}({scope}): {description}\n\n{body}"
}